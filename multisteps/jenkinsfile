pipeline {
    agent any
    
    stages {
        stage('Hello World') {
            steps {
                echo 'Hello, World!'
            }
        }
        
        stage('Build') {
            steps {
                script {
                    def prevent_build = true
                    def repo = 'empty'
                    withFolderProperties{
                        prevent_build = "${env.PREVENT_BUILD}"
                        repo = "${env.REPO}"
                    }
                    echo 'Building...'
                    echo "PREVENT_BUILD=${env.prevent_build}"
                    echo "REPO=${env.repo}"
                    // Add your build steps here
                }
            }
        }
        
        stage('Test') {
            steps {
                echo 'Running tests...'
                // Add your test steps here
            }
        }
    }
}